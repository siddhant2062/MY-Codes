package contest_1;
import java.util.Scanner;
public class vi_hollow_rhombus_pattern {
	public static void main(String args[]) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=n;j++) {
				if(j>1||j<n-1) {
					System.out.println(" ");
				}else {
					System.out.println("*");
				}
			}
			System.out.println();
		}
		
	}

}
